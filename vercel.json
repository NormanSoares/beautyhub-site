{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "nodejs18.x",
        "maxDuration": 30
      }
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*.js",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*.css",
      "use": "@vercel/static"
    },
    {
      "src": "styles.css",
      "use": "@vercel/static"
    },
    {
      "src": "Imagens/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "Produtos de beleza/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "Produtos de conforto/**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/api/health",
      "destination": "/api/health.js"
    },
    {
      "source": "/api/aliexpress-callback",
      "destination": "/api/aliexpress-callback.js"
    },
    {
      "source": "/api/callback",
      "destination": "/api/callback.js"
    },
    {
      "source": "/api/test-callback-env",
      "destination": "/api/test-callback-env.js"
    },
    {
      "source": "/api/",
      "destination": "/api/index.js"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "env": {
    "MONGODB_URI": "$MONGODB_URI",
    "NORMANDB_URI": "$NORMANDB_URI",
    "ROCKETDB": "$ROCKETDB",
    "ROCKETDB_URI": "$ROCKETDB_URI",
    "ALIEXPRESS_WEBHOOK_SECRET": "$ALIEXPRESS_WEBHOOK_SECRET",
    "WEBHOOK_SECRET": "$WEBHOOK_SECRET",
    "ALLOWED_ORIGINS": "$ALLOWED_ORIGINS",
    "NODE_ENV": "production"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With"
        },
        {
          "key": "Access-Control-Max-Age",
          "value": "86400"
        }
      ]
    }
  ]
}