# Configurações do Sistema de Dropshipping
# 67 Beauty Hub

# Servidor
PORT=3000
NODE_ENV=development

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu-email@gmail.com
SMTP_PASS=sua-senha-de-app

# Webhook
WEBHOOK_URL=https://seu-webhook.com/endpoint

# Slack
SLACK_WEBHOOK=https://hooks.slack.com/services/SEU/SLACK/WEBHOOK

# Telegram
TELEGRAM_BOT_TOKEN=seu-bot-token
TELEGRAM_CHAT_ID=seu-chat-id

# MongoDB (opcional)
MONGODB_URI=mongodb://localhost:27017/beautyhub-dropshipping

# PayPal (para pagamentos)
PAYPAL_CLIENT_ID=seu-paypal-client-id
PAYPAL_CLIENT_SECRET=seu-paypal-client-secret

# AliExpress API (opcional)
ALIEXPRESS_APP_KEY=sua-app-key
ALIEXPRESS_APP_SECRET=seu-app-secret

# Amazon API (opcional)
AMAZON_ACCESS_KEY=sua-access-key
AMAZON_SECRET_KEY=seu-secret-key
AMAZON_ASSOCIATE_TAG=seu-associate-tag

# Configurações de Scraping
SCRAPING_DELAY=2000
SCRAPING_TIMEOUT=30000
SCRAPING_RETRIES=3

# Configurações de Notificação
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_WEBHOOK_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_TELEGRAM_ENABLED=false

# Configurações de Estoque
LOW_STOCK_THRESHOLD=5
OUT_OF_STOCK_THRESHOLD=0
PRICE_CHANGE_THRESHOLD=0.05

# Configurações de Agendamento
PRICE_UPDATE_INTERVAL=0 */6 * * *
STOCK_CHECK_INTERVAL=0 */2 * * *
BACKUP_INTERVAL=0 2 * * *

